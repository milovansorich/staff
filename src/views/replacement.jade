extends layout

block content
  header.bg-white.shadow
        .mx-auto.max-w-7xl.px-4.py-6(class='sm:px-6 lg:px-8')
          if job === undefined
                .bg-red-100.mb-3.border.border-red-400.text-red-700.px-4.py-3.rounded.relative(role='alert')
                    strong.font-bold No posee trabajo asignado.
                    br
                    span.block(class='sm:inline') Ha solicitado reemplazo, debe cerrar sesi√≥n.
                    span.absolute.top-0.bottom-0.right-0.px-4.py-3
                        svg.fill-current.h-6.w-6.text-red-500(role='button' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20')
                        title Close
                        path(d='M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z')
          else
            h1.text-3xl.font-bold.tracking-tight.text-gray-900 Ofertas de trabajo
            ul.divide-y.divide-gray-100(role='list')
                li.flex.justify-between.gap-x-6.py-5
                  .flex.min-w-0.gap-x-4
                    img.h-12.w-12.flex-none.rounded-full.bg-gray-50(src='https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80' alt='')
                    .min-w-0.flex-auto
                      p.text-sm.font-semibold.leading-6.text-gray-900 #{job.title}
                      p.mt-1.truncate.text-xs.leading-5.text-gray-500 #{job.role}
                  .hidden.shrink-0(class='sm:flex sm:flex-col sm:items-end')
                    p.text-sm.leading-6.text-gray-900 #{job.salary} $CLP 
                    p.mt-1.text-xs.leading-5.text-gray-500
                      div
                        - route = '/replacement/'+job.code
                        - method = 'POST'
                        form(action=route method=method)
                          div.inline-flex.gap-2
                              button.flex.w-full.justify-center.rounded-md.bg-indigo-600.px-3.text-sm.font-semibold.leading-6.text-white.shadow-sm(type='submit' class='py-1.5 hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600') Solicitar reemplazo
