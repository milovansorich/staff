doctype html
html.h-full.bg-gray-100
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.h-full
    .min-h-full
      nav.bg-gray-800
        .mx-auto.max-w-7xl.px-4(class='sm:px-6 lg:px-8')
          .flex.h-16.items-center.justify-between
            .flex.items-center
              .flex-shrink-0
                img.h-8.w-8(src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500' alt='Your Company')
              .hidden(class='md:block')
                .ml-10.flex.items-baseline.space-x-4
                  // Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
                  
                  if role != undefined
                    if role == 'applicant'
                      a.bg-gray-900.text-white.rounded-md.px-3.py-2.text-sm.font-medium(href='/' aria-current='page') Ofertas
                      a.text-gray-300.rounded-md.px-3.py-2.text-sm.font-medium(href='/profile' class='hover:bg-gray-700 hover:text-white') Perfil
                    else if role == 'staff'  
                      a.text-gray-300.rounded-md.px-3.py-2.text-sm.font-medium(href='/replacement' class='hover:bg-gray-700 hover:text-white') Reemplazo
                    else if role == 'admin'   
                      a.bg-gray-900.text-white.rounded-md.px-3.py-2.text-sm.font-medium(href='/' aria-current='page') Ofertas
                      a.text-gray-300.rounded-md.px-3.py-2.text-sm.font-medium(href='/vacants' class='hover:bg-gray-700 hover:text-white') Vacantes
                    else 
                      a.bg-gray-900.text-white.rounded-md.px-3.py-2.text-sm.font-medium(href='/' aria-current='page') Ofertas  
            .hidden(class='md:block')
              .ml-4.flex.items-center(class='md:ml-6')
                // Profile dropdown
                .relative.ml-3
                  if user != undefined
                    div.inline-flex.gap-2
                      label.relative.flex.max-w-xs.items-center.rounded-full.bg-gray-800.text-sm(class='focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' aria-expanded='false' aria-haspopup='true')
                        span.absolute(class='-inset-1.5')
                        span.sr-only Open user menu
                        label.text-white #{user}
                      a.relative.flex.max-w-xs.items-center.rounded-full.bg-gray-800.text-sm(href='/logout' class='focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' aria-expanded='false' aria-haspopup='true')
                        span.absolute(class='-inset-1.5')
                        span.sr-only Open user menu
                        label.text-white | Salir 
            .-mr-2.flex(class='md:hidden')
              // Mobile menu button
              button.relative.inline-flex.items-center.justify-center.rounded-md.bg-gray-800.p-2.text-gray-400(type='button' class='hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' aria-controls='mobile-menu' aria-expanded='false')
                span.absolute(class='-inset-0.5')
                span.sr-only Open main menu
                // Menu open: "hidden", Menu closed: "block"
                svg.block.h-6.w-6(fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' aria-hidden='true')
                  path(stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5')
                // Menu open: "block", Menu closed: "hidden"
                svg.hidden.h-6.w-6(fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' aria-hidden='true')
                  path(stroke-linecap='round' stroke-linejoin='round' d='M6 18L18 6M6 6l12 12')
        // Mobile menu, show/hide based on menu state.
        #mobile-menu.mt-1(class='md:hidden')
          .space-y-1.px-2.pb-3.pt-2(class='sm:px-3')
            // Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
            a.bg-gray-900.text-white.block.rounded-md.px-3.py-2.text-base.font-medium(href='#' aria-current='page') Ofertas
            a.text-gray-300.block.rounded-md.px-3.py-2.text-base.font-medium(href='#' class='hover:bg-gray-700 hover:text-white') Perfil
            a.text-gray-300.block.rounded-md.px-3.py-2.text-base.font-medium(href='#' class='hover:bg-gray-700 hover:text-white') Postulaciones 
            a.text-gray-300.block.rounded-md.px-3.py-2.text-base.font-medium(href='#' class='hover:bg-gray-700 hover:text-white') Reemplazo
            a.text-gray-300.block.rounded-md.px-3.py-2.text-base.font-medium(href='#' class='hover:bg-gray-700 hover:text-white') Vacantes
          .border-t.border-gray-700.pb-3.pt-4
            .flex.items-center.px-5
              .flex-shrink-0
                img.h-10.w-10.rounded-full(src='https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80' alt='')
              .ml-3
                .text-base.font-medium.leading-none.text-white Tom Cook
                .text-sm.font-medium.leading-none.text-gray-400 tom@example.com
            .mt-3.space-y-1.px-2
              a.block.rounded-md.px-3.py-2.text-base.font-medium.text-gray-400(href='#' class='hover:bg-gray-700 hover:text-white') Salir


      block content
